<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/car"
            android:id="@+id/car"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/car_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/car"
            android:text="车系论坛"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_show"
            android:text="为你的爱车找到队伍"
            android:layout_toRightOf="@id/car"
            android:textSize="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/area"
            android:id="@+id/car_"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/car_show_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/car_"
            android:text="地区论坛"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_show_"
            android:text="为你的爱车找到队伍"
            android:layout_toRightOf="@id/car_"
            android:textSize="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/activity"
            android:id="@+id/car_car"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/car_show_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/car_car"
            android:text="车系论坛"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_show_show"
            android:text="为你的爱车找到队伍"
            android:layout_toRightOf="@id/car_car"
            android:textSize="10dp"
            />
    </RelativeLayout>

</LinearLayout>