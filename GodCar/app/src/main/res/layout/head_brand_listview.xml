                    android:layout_centerHorizontal="true"
                    android:text="测试1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/hand_img_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/star" />

                <TextView
                    android:id="@+id/hand_name_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hand_img_10"
                    android:layout_centerHorizontal="true"
                    android:text="测试1" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#f1eaea" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="造车神器" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:background="#e7d9d9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/go_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_brand_1"
            android:text="入门代步" />
        <TextView
            android:id="@+id/go_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_search"
            android:text="都市白领"
            android:layout_toRightOf="@id/go_1"/>
        <TextView
            android:id="@+id/go_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_brand_1"
            android:text="想买SUV"
            android:layout_toRightOf="@id/go_2"/>
        <TextView
            android:id="@+id/go_4"
            android:layout_toRightOf="@id/go_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_brand_1"
            android:text="撩妹利器" />
        <TextView
            android:id="@+id/go_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_brand_2"
            android:text="硬派越野"
            android:layout_below="@id/go_1"/>
        <TextView
            android:id="@+id/go_6"
            android:layout_toRightOf="@id/go_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_brand_2"
            android:text="7座大空间"
            android:layout_below="@id/go_1"/>
        <TextView
            android:id="@+id/go_7"
            android:layout_toRightOf="@id/go_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_brand_2"
            android:text="适合女性"
            android:layout_below="@id/go_1"/>
        <TextView
            android:id="@+id/go_8"
            android:layout_toRightOf="@id/go_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_brand_2"
            android:text="小钢炮"
            android:layout_below="@id/go_1"/>

