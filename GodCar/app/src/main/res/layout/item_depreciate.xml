<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/styledinventorystate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@mipmap/nvjing"
            android:layout_gravity="center_vertical"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/seriesname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试3"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/specname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/seriesname"
                android:text="测试1"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/specprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/specname"
                android:text="测试2"
                android:textSize="20sp"
                android:textColor="#f00"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/fctprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/specname"
                android:layout_toRightOf="@id/specprice"
                android:text="测试4"
                android:layout_marginTop="9dp"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textSize="10sp"
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试3"
           android:layout_margin="7dp"/>

        <TextView
            android:textSize="10sp"
            android:id="@+id/shortname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/city"
            android:text="测试1"
            android:layout_margin="7dp"
            />

        <TextView
            android:textSize="10sp"
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shortname"
            android:text="测试2"
            android:layout_margin="7dp"/>

        <TextView
            android:textSize="10sp"
            android:id="@+id/orderrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/distance"
            android:text="测试4"
            android:layout_margin="7dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_countbuycar"
            android:text="购车计算"
            style="@style/depreciate_bottom_style" />

        <TextView
            style="@style/depreciate_bottom_style"
            android:id="@+id/item_teltext" />
        <TextView
            style="@style/depreciate_bottom_style"
            android:id="@+id/query"
            android:text="询底价"/>

    </LinearLayout>

</LinearLayout>