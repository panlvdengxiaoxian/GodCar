<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/unihub_popwindow_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/unihub_margin"
            android:text="@string/unihub_tv"
            android:textSize="@dimen/unihub_textsize"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/unihub_margin"
            android:src="@mipmap/down_"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <net.lidongdong.godcar.view.AutoHomeListView
        android:id="@+id/fragment_unihub_lv"
        style="@style/style_listview"/>


</LinearLayout>