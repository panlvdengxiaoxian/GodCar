<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styles_handpick">
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/handpick_textSize</item>
        <item name="android:textColor">@drawable/selector_textcolor</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_depreciate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableRight"> @mipmap/rightgo</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="settingfragment_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">#a38c8c</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="settingfragment_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--listview通用-->

    <style name="style_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/listView</item>
        <item name="android:dividerHeight">@dimen/listView_dividerHeight</item>
        <item name="android:layout_margin">@dimen/listView_margin</item>
        <item name="android:smoothScrollbar">false</item>
    </style>

    <style name="hand_brand_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="depreciate_bottom_style">
        <item name="android:textColor">#2690e1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
